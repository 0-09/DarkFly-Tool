import os, sys

_ilusi_ = {

    "bin": "/data/data/com.termux/files/usr/bin",
    "skt": "clear >(tty)",
    "fol": ".module",
    "fil": "lib",
    "jmbod": ".JM.xn",

    "file": {

        "k": ".MN",
        "o": ".DF",
        "n": ".SPM",
        "t": ".MNBS",
        "0": ".INF",
        "l": ".FN",
        "s": ".BR",

    }
}

def _hajar_():
    print ("[*] installing...")
    os.system("python2 .module/%s" % _ilusi_["file"]["k"])
    os.system("python2 .module/%s" % _ilusi_["file"]["o"])
    os.system("python2 .module/%s" % _ilusi_["file"]["n"])
    os.system("python2 .module/%s" % _ilusi_["file"]["t"])
    os.system("python2 .module/%s" % _ilusi_["file"]["0"])
    os.system("python2 .module/%s" % _ilusi_["file"]["l"])
    os.system("python2 .module/%s" % _ilusi_["file"]["s"])


def _kong_():
    os.system("mv .module/.remove $cd %s" % _ilusi_["bin"])
    os.system("mv lib $cd %s" % _ilusi_["bin"])
    print "=" * 10
    print "[!] Done!\n[!] run Type 'DarkFly'\n"
    os.system("python2 %s" % _ilusi_["jmbod"])

def _kntl_():
    for x in a:
        if (x == "y" or x == "Y"):
            _hajar_()
            _kong_()
        elif (x == "n" or x == "N"):
            sys.exit()

a = raw_input("[+] install DarkFly now?[y/n]: ")
_kntl_()